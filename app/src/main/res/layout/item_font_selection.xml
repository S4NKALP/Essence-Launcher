<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fontName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/fontType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Font"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/fontPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The quick brown fox jumps over the lazy dog"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <View
        android:id="@+id/selectedIndicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_circle"
        android:visibility="gone" />

</LinearLayout>
